{
    "name": "Media Dark Mode",
    "version": "1.0",
    "description": "Transforms images and videos into dark mode. Suitable for courses and learning materials.",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "MediaDarkMode"
    },
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}